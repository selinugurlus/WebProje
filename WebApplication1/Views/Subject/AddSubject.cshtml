@model EntityLayer1.Concrete.Subject

@{
    ViewBag.Title = "AddSubject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Yeni Ders Başlığı  Ekleme </h1>
<br />

@using (Html.BeginForm("AddSubject", "Subject", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Ders Başlığı")
    @Html.TextBoxFor(x => x.subject_name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.subject_name)
    <br /><br />
    @Html.Label("Ders")
    @Html.DropDownListFor(x => x.lesson_id, (List<SelectListItem>)ViewBag.vll, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Ders Başlığını Açan Kullanıcı ")
    @Html.DropDownListFor(x => x.user_id, (List<SelectListItem>)ViewBag.vlu, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.user_id)
    <br /><br />
    <button class="btn btn-success">Kaydet</button>


</div>

}

