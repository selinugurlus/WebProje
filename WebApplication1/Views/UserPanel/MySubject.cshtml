@using EntityLayer1.Concrete
@model List<Subject>

@{
    ViewBag.Title = "MySubject";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Konu Başlığı İşlemleri</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Konu Başlığı İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Konu Adı
                            </th>

                            <th style="width: 8%" class="text-center">
                                Ders
                            </th>
                            
                        
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.subject_id
                            </td>
                            <td>
                                <a>
                                    @item.subject_name
                                </a>
                            </td>

                            <td>
                                <a>
                                    @item.Lesson.lesson_name
                                </a>
                            </td>
                         
                            <td class="project-actions text-right">

                                <a class="btn btn-info btn-sm" href="/UserPanel/UpdateSubject/@item.subject_id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/UserPanel/NewSubject/" class="btn btn-primary">Yeni Konu Başlığı Ekle</a>
